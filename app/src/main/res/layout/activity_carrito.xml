<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/id1"
        android:background="@color/botones"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/precio_total"
            android:text="Total: $$$"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="7dp"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mensaje1"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Felicitaciones, su compra fue exitosa..."
        android:textSize="20dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/carrito_lista"
        android:layout_below="@+id/id1"
        android:layout_above="@+id/siguiente_proceso"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/siguiente_proceso"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/botones"
        android:text="CONTINUAR"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />


</RelativeLayout>