<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".LoginAdmin"
    android:background="#5299ADCC">

    <!-- Título de Iniciar Sesión -->
    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIAR SESIÓN"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#05020B" />

    <!-- Imagen circular -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/usuarios" />

    <!-- Campo de entrada para número -->
    <EditText
        android:id="@+id/numeroadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ingrese su número"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:inputType="phone"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/codigoadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ingrese el código recibido"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/enviarnumeroadmin"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="ENVIAR CÓDIGO"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="#000000" />

    <Button
        android:id="@+id/enviarcodigoadmin"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="CONFIRMAR"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:visibility="gone"/>

    <!-- Espacio flexible para empujar los botones hacia abajo -->
    <Space
        android:layout_width="343dp"
        android:layout_height="0dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambien puedes iniciar sesión con:"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="0dp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#545357" />

    <!-- Botones de redes sociales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/facebookadmin"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="FACEBOOK"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/googleadmin"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="GOOGLE"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>